<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/background_secondary"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/recipientName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="John Doe"
                android:textAppearance="?attr/textAppearanceSubtitle1" />

            <com.google.android.material.chip.Chip
                android:id="@+id/statusChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resolved"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/accent_color" />

        </LinearLayout>

        <TextView
            android:id="@+id/queryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="How can I reset my password?"
            android:textAppearance="?attr/textAppearanceBody1" />

        <TextView
            android:id="@+id/responseText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="You can reset your password by going to the 'Forgot Password' section on the login page."
            android:textAppearance="?attr/textAppearanceBody2"
            android:visibility="visible" />

        <TextView
            android:id="@+id/submissionDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submitted on: Jan 15, 2025"
            android:textAppearance="?attr/textAppearanceCaption" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>